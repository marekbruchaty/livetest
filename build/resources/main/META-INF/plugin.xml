<idea-plugin>
  <id>org.jetbrains</id>
  <name>my_plugin</name>
  <version>1.0-SNAPSHOT</version>
  <vendor email="dummy" url="dummy">dummy</vendor>
  <description>
      Sample plugin.&lt;br&gt;
    </description>
  <change-notes>
      Release 0.0.1: Initial release.&lt;br&gt;
    
  </change-notes>
  <idea-version since-build="181.3870" until-build="181.*"/>
  <depends>com.intellij.modules.python</depends>
  <extensions defaultExtensionNs="com.intellij"/>
  <actions>
    <group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action id="Myplugin.Textboxes" class="HelloAction" text="Hello" description="Says hello"/>
    </group>
    <action id="VirtualFileChange" class="VirtualFileChangeAction" text="VirtualFileChangeAction" description="VirtualFileChangeAction"/>
  </actions>
  <application-components>
    <component>
      <implementation-class>PluginInitialization</implementation-class>
    </component>
  </application-components>
</idea-plugin>
